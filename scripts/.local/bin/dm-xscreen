#!/bin/sh
case "$(printf "󰍺 same\n right\n left\n󱒃 all\n" | dmenu -i -p 'Screen: ')" in
  '󰍺 same')
    xrandr --output HDMI-1 --mode 1920x1080 --same-as eDP-1
    ;;
  ' right')
    xrandr --auto --output HDMI-1 --auto --right-of eDP-1
    ;;
  ' left')
    xrandr --auto --output HDMI-1 --auto --left-of eDP-1
    ;;
  '󱒃 all')
    xrandr --auto --output HDMI-1 --auto --primary && xrandr --output eDP-1 --off
    ;;
  *)
    exit 1
    ;;
esac
