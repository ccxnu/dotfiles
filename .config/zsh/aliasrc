alias vi=nvim
alias svi="sudo -Es nvim"
alias xi="sudo xbps-install"
alias xr="sudo xbps-remove"
alias xq="xbps-query"
alias im="nsxiv"

alias gs='git status'
alias gf='git diff'
alias gl='git log'
alias gp='git push'
alias gpu='git push -u origin main'
alias gpl='git pull'
alias ga='git add'
alias gaa='git add .'
alias gc="git commit -m"
alias gce="git config user.email"
alias gcn="git config user.name"

alias l='eza -G'   # Display as a grid
alias ls='eza -a'   # Display as a grid
alias la='eza -la'   # Display all files
alias ld='eza -D1'   # Display just directories one per line
alias ll='eza -l1a' # Display all files one per line

alias nmount="sudo mount -o gid=users,fmask=113,dmask=002 /dev/sdb1 xrousbn"
alias unmount="sudo umount /dev/sdb1"

alias cpdoc="cp ~/Ists/Plantilla/plantilla.tex"
alias vidoc="nvim ~/Ists/Plantilla/plantilla.tex"

alias update-grub="sudo grub-mkconfig -o /boot/grub/grub.cfg"

alias tme="tmux a -t me"

alias za="zathura"

alias lg=lazygit

alias bib="nvim ~/Ists/refs.bib"

alias count="find . -type f | wc -l"

alias e="exit"
alias c="clear"

alias cs="xclip -selection clipboard"
alias vs="xclip -o -selection clipboard"

alias sharescreen="xrandr --output HDMI-1 --mode 1920x1080 --same-as eDP-1"
alias sharescreen_right="xrandr --auto --output HDMI-1 --auto --right-of eDP-1"
alias sharescreen_left="xrandr --auto --output HDMI-1 --auto --left-of eDP-1"
